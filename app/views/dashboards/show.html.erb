<br />

<div class="card-box col-xs-10 col-xs-offset-1">
		<% if current_user.enrolled_courses.size == 0 &&
			current_user.courses.size == 0 %> 
			<h2>Teach Course or Enroll to a Course!</h2>
		<% end %>
	<% if current_user.enrolled_courses.size >= 1 %>
		<h1>What I'm Learning</h1>
	<% end %>
	<% current_user.enrolled_courses.each do |course|%>
		<h2 class="text-center">
			<%= link_to course.title, course_path(course) %>
		</h2>
		<br />
		<%= image_tag course.image, :class => 'img-responsive' %>
		<br />
		<div class="col-xs-12 col-sm-8">
			<%= course.description %>
		</div>
		<div class="col-xs-12 col-sm-4 text-center">
			<%= link_to  course_path(course), :class => 'btn btn-lg btn-primary' do %>
				More Info <span class="glyphicon glyphicon-chevron-right"></span>
			<% end %>
		</div>
		<hr class="col-xs-8 col-xs-offset-2">
		<br class="clr" />
	<% end %>

	<% if current_user.courses.size >= 1 %>
		<h1>What I'm Teaching</h1>
	<% end %>
	<% current_user.courses.each do |course|%>
		<h2 class="text-center">
			<%= link_to course.title, course_path(course) %>
		</h2>
		<br />
		<%= image_tag course.image, :class => 'img-responsive' %>
		<br />
		<div class="col-xs-12 col-sm-8">
			<%= course.description %>
			<br /><br />
		</div>
		<div class="col-xs-12 col-sm-4 text-center">
			<%= link_to course_path(course), :class => 'btn btn-md btn-primary' do %>
					More Info <span class="glyphicon glyphicon-chevron-right" aria-hidden="true" ></span>
			<% end %>
		</div>
		<hr class="col-xs-8 col-xs-offset-2">
		<br class="clr" />
	<% end %>
</div>