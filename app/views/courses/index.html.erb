<% content_for :title do %>
  <%= title("Courses") %> 
<% end %>

<br />

<div class="card-box col-xs-10 col-xs-offset-1">
	<h1>Learn Something Today<h1>
	<hr />

	<% @courses.each do |course| %>
		<h2 class="text-center">
			<%= link_to course.title, course_path(course) %>
		</h2>
		
		<% if course.image.present? %>
		  <%= image_tag course.image, :class => 'img-responsive' %>
		<% end %>
	 	
	 	<br />
		<div class="col-xs-12 col-sm-8">
		  <%= course.description %>
		  <br /><br />
		</div>
		<div class="col-xs-12 col-sm-4 text-center">
		  <%= link_to course_path(course), :class => 'btn btn-primary btn-large' do %>
		  	More Details <span class="glyphicon glyphicon-chevron-right"></span> 
		  <% end %>	
		</div>
		<br class="clr" />
	<% end %>
</div>